@page
@model IndexModel
@{
    ViewData["Title"] = "Minimum Visible News Positivity";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<partial name="_StatusMessage" for="StatusMessage" />
<div class="row d-flex justify-content-center">
    <div class="col-md-6">
        <h3 class="text-white">@ViewData["Title"]</h3>
        <form id="profile-form" method="post" asp-action="SetPositivityLevel" asp-controller="Home">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <input type="number" name="positivityLevel" min="0" max="100" class="form-control" placeholder="Positivity Level" />
            </div>
            <button id="update-profile-button" type="submit" class="w-100 btn btn-lg btn-primary custom-form-btn">Save</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
