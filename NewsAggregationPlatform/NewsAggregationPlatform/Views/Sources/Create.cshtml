@using NewsAggregationPlatform.Models.Entities
@model Source

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Source</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RssUrl" class="control-label"></label>
                <input asp-for="RssUrl" class="form-control" />
                <span asp-validation-for="RssUrl" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OriginUrl" class="control-label"></label>
                <input asp-for="OriginUrl" class="form-control" />
                <span asp-validation-for="OriginUrl" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div>
    @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
    {
        <div class="text-danger">@error.ErrorMessage</div>
    }
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
